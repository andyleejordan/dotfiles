#!/usr/bin/env bash

if [ "$#" -lt "3" ]; then
    echo 'Usage: "<old email>" "<new email>" <rev-list>'
    exit 1
fi

export OLDEMAIL=$1
shift

export NEWEMAIL=$1
shift

git filter-branch -f --env-filter 'if [ "$GIT_AUTHOR_EMAIL" = "$OLDEMAIL" ]; then export GIT_AUTHOR_EMAIL="$NEWEMAIL" GIT_COMMITTER_EMAIL="$NEWEMAIL"; fi' -- $@
